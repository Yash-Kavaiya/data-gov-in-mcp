# data.gov.in MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your data.gov.in API key
# Get it from: https://data.gov.in (My Account section)
DATA_GOV_IN_API_KEY=your-api-key-here

# Optional: API Configuration
DATA_GOV_IN_BASE_URL=https://api.data.gov.in
DATA_GOV_IN_TIMEOUT=30

# Optional: Caching Configuration
DATA_GOV_IN_CACHE_ENABLED=true
DATA_GOV_IN_CACHE_TTL=3600
DATA_GOV_IN_CACHE_MAX_SIZE=1000

# Optional: Rate Limiting
DATA_GOV_IN_RATE_LIMIT_CALLS=100
DATA_GOV_IN_RATE_LIMIT_PERIOD=60

# Optional: Retry Configuration
DATA_GOV_IN_MAX_RETRIES=3
DATA_GOV_IN_RETRY_DELAY=1.0
DATA_GOV_IN_BACKOFF_FACTOR=2.0

# Optional: Pagination
DATA_GOV_IN_DEFAULT_LIMIT=10
DATA_GOV_IN_MAX_LIMIT=100

# Optional: Logging
DATA_GOV_IN_LOG_LEVEL=INFO
